@model IEnumerable<TaskManager.Data.Entities.UserStory>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">
    <h2>User Stories</h2>
    <div class="row">
        @foreach (var story in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@story.StoryTitle</h5>
                        <p class="card-text">@story.StoryDescription</p>
                        <p class="card-text"><small class="text-muted">Status: @story.Status</small></p>
                        <p class="card-text"><small class="text-muted">Created At: @story.CreatedAt.ToString("yyyy-MM-dd")</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
